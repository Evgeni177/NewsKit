{
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": true,
    "baseUrl": "./",
    "paths": {
      "newskit": [
        "../src"
      ],
      "newskit/*": [
        "../src/*"
      ],
      "@components/page-title": ["./components/page-title.tsx"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "src"
  ],
  "include": [
    "*.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
